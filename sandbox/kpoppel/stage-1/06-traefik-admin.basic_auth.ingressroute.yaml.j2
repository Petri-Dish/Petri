---
apiVersion: traefik.containo.us/v1alpha1
kind: IngressRoute
metadata:
  name: ingressrouteadmin
  namespace: kube-system
spec:
  entryPoints:
    - websecure
  routes:
    - match: Host(`traefik.{{DOMAIN}}`)
      kind: Rule
      services:
        - name: traefik
          port: 8080
      middlewares:
        # Using a middleware chain is broken.
        #- name: system-secured
        - name: system-auth-users
        - name: system-https-only

  tls:
    certResolver: default
