---
apiVersion: traefik.containo.us/v1alpha1
kind: IngressRoute
metadata:
  name: ingressrouteadmin
  namespace: kube-system
spec:
  entryPoints:
    - websecure
  routes:
    - match: Host(`traefik.{{DOMAIN}}`)
      kind: Rule
      services:
        - name: traefik
          port: 8080
      middlewares:
        - name: system-secured
  tls:
    certResolver: default
